object Test {
	def main(args:Array[String]):Unit = {
	  
	  //Annoymous Subclass
	  val annoyClass = new Person("Hello") {
	    
	    //因为父类有toString方法，当子类也定义同名方法时，override必须加上。(易违约基类问题规则)
	    override def toString:String = "My name is hello !"
	  }
	}
}

class Person(val name:String) {
  private var age = 0
  
}